  <div class="vault-box">
    <h1>Enter the Vault Code</h1>
    <input type="password" id="vaultCode" maxlength="6" placeholder="‚óè‚óè‚óè‚óè‚óè‚óè"/>
    <br>
    <button onclick="checkCode()">Unlock Vault</button>
    <div class="message" id="messageBox"></div>
  </div>

  <script>
    const correctCode = "274913"; // üîë Change this to your quiz round's code

    function checkCode() {
      const inputCode = document.getElementById("vaultCode").value;
      const messageBox = document.getElementById("messageBox");

      if (inputCode === correctCode) {
        messageBox.style.color = "#00ff88";
        messageBox.innerText = "‚úÖ Vault Unlocked!";
      } else {
        messageBox.style.color = "#ff4d4d";
        messageBox.innerText = "‚ùå Incorrect Code. Try Again!";
      }
    }
  </script>
